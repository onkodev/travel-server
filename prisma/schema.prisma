model Faq {
  id                  Int          @id @default(autoincrement())
  question            String
  answer              String
  questionKo          String?      @map("question_ko")
  answerKo            String?      @map("answer_ko")
  status              String       @default("pending") @db.VarChar(20) // pending, approved, rejected
  source              String       @default("manual") @db.VarChar(20) // manual, gmail
  sourceEmailId       String?      @map("source_email_id")
  sourceEmailSubject  String?      @map("source_email_subject")
  confidence          Decimal?     @db.Decimal(3, 2) // AI 신뢰도 0.00~1.00
  sourceContext       Json?        @map("source_context") // { questionSource, answerSource }
  tags                String[]
  viewCount           Int          @default(0) @map("view_count")
  helpfulCount        Int          @default(0) @map("helpful_count")
  notHelpfulCount     Int          @default(0) @map("not_helpful_count")
  approvedAt          DateTime?    @map("approved_at") @db.Timestamptz(6)
  approvedBy          String?      @map("approved_by") @db.Uuid
  rejectionReason     String?      @map("rejection_reason")
  embedding           Unsupported("vector(768)")? @map("embedding")
  createdAt           DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt           DateTime     @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@index([status], map: "idx_faqs_status")
  @@index([source], map: "idx_faqs_source")
  @@index([createdAt(sort: Desc)], map: "idx_faqs_created_at")
  @@index([tags], map: "idx_faqs_tags", type: Gin)
  @@map("faqs")
}

